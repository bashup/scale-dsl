#!/bin/bash
shopt -q expand_aliases||{ unalias -a;shopt -s expand_aliases;};builtin alias\
	+='~ - ' ~='{ ::__;::(){ ((!$#))||{ local __blarg__=("$@") __blk__=1;shift; ' -='"${__dsl__[@]-::no-dsl}" '\
	'{{=return;return;};__blk__=;set -- "${__blarg__[@]:1}"; '\
	$'}}=};if :: 0 "$@"; __blk__=("" $?); then REPLY="${REPLY-}" eval \'__bsp__=("${__bsp__[@]:1}");\'"$__bsp__"||:;fi;__:: ${__blk__[1]};}'
eval '::block(){ ((!$#))||local __dsl__=("$@");${__blk__:+::};};__bsp__=
::__(){ __bsp__=("${__blk__:+__blk__=1;$(declare -f ::);}" "${__bsp__[@]}");}
__::(){ return $1;}'
